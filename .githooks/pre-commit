#!/bin/bash
# Pre-commit hook for Go projects
# Automatically formats Go code and blocks unformatted commits

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    echo -e "${GREEN}No Go files to check${NC}"
    exit 0
fi

# Check if gofmt is available
if ! command -v gofmt &> /dev/null; then
    echo -e "${RED}Error: gofmt not found. Please install Go.${NC}"
    exit 1
fi

echo -e "${YELLOW}Formatting Go files...${NC}"

# Format all staged Go files
UNFORMATTED_FILES=""
for file in $STAGED_GO_FILES; do
    # Skip deleted files
    if [ ! -f "$file" ]; then
        continue
    fi
    
    # Format the file
    gofmt -w "$file"
    
    # Check if file was modified by gofmt
    if ! git diff --exit-code "$file" > /dev/null; then
        UNFORMATTED_FILES="$UNFORMATTED_FILES $file"
        # Re-stage the formatted file
        git add "$file"
    fi
done

# Report results
if [ -n "$UNFORMATTED_FILES" ]; then
    echo -e "${GREEN}✓ Formatted files:${NC}"
    for file in $UNFORMATTED_FILES; do
        echo -e "  - $file"
    done
fi

# Run gofmt check to ensure all files are formatted
echo -e "${YELLOW}Verifying formatting...${NC}"
UNFORMATTED=$(gofmt -l $STAGED_GO_FILES)

if [ -n "$UNFORMATTED" ]; then
    echo -e "${RED}✗ The following files are not formatted:${NC}"
    echo "$UNFORMATTED"
    echo -e "${RED}Please run 'gofmt -w .' and commit again.${NC}"
    exit 1
fi

# Optionally run go vet on staged files
if command -v go &> /dev/null; then
    echo -e "${YELLOW}Running go vet...${NC}"
    for file in $STAGED_GO_FILES; do
        if [ -f "$file" ]; then
            # Get the package directory
            PKG_DIR=$(dirname "$file")
            # Run go vet on the package
            if ! go vet "./$PKG_DIR" 2>&1 | grep -v "no Go files"; then
                echo -e "${RED}✗ go vet found issues${NC}"
                exit 1
            fi
        fi
    done
    echo -e "${GREEN}✓ go vet passed${NC}"
fi

echo -e "${GREEN}✓ All pre-commit checks passed${NC}"
exit 0
